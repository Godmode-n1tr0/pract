<Page x:Class="pract7.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход" 
      Background="White"
      Height="150" 
      Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Вход в систему" 
               HorizontalAlignment="Center" 
               FontSize="16" 
               FontWeight="Bold"/>

        <Label Grid.Row="1" Grid.Column="0" Content="ID врача:" HorizontalAlignment="Right"/>
        <TextBox x:Name="DoctorIdBox" Grid.Row="1" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Пароль:" HorizontalAlignment="Right"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Войти" Click="LoginButton_Click" Width="80" Height="25" Margin="5"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Width="80" Height="25" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>