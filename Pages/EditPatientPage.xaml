<Page x:Class="pract7.Pages.EditPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Фамилия:"/>
        <TextBox x:Name="LastNameBox" Grid.Row="0" Grid.Column="1" Height="20" Width="150" Margin="5,0"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Имя:"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="1" Grid.Column="1" Height="20" Width="150" Margin="5,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Отчество:"/>
        <TextBox x:Name="MiddleNameBox" Grid.Row="2" Grid.Column="1" Height="20" Width="150" Margin="5,0"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Дата рождения:"/>
        <TextBox x:Name="BirthdayBox" Grid.Row="3" Grid.Column="1" Height="20" Width="150" Margin="5,0"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Телефон:"/>
        <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Height="20" Width="150" Margin="5,0"/>

        <Button Grid.Row="5" Grid.Column="1" Content="Сохранить" Click="SaveButton_Click" Width="80" Height="25" Margin="0,8,90,3"/>
        <Button Grid.Row="5" Grid.Column="1" Content="Назад" Click="BackButton_Click" Width="80" Height="25" Margin="90,5,0,0"/>
    </Grid>
</Page>