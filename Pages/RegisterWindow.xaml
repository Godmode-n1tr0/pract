<Page x:Class="pract7.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация" 
      Height="350" 
      Background="White"
      Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Регистрация врача" 
               HorizontalAlignment="Center" 
               FontSize="16" 
               FontWeight="Bold"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Фамилия:" HorizontalAlignment="Right"/>
        <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Имя:" HorizontalAlignment="Right"/>
        <TextBox x:Name="FirstNameBox" Grid.Row="2" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Отчество:" HorizontalAlignment="Right"/>
        <TextBox x:Name="MiddleNameBox" Grid.Row="3" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Специализация:" HorizontalAlignment="Right"/>
        <ComboBox x:Name="SpecBox" Grid.Row="4" Grid.Column="1" Height="25" Width="180" Margin="5,0">
            <ComboBoxItem>Хирург</ComboBoxItem>
            <ComboBoxItem>Терапевт</ComboBoxItem>
            <ComboBoxItem>Стоматолог</ComboBoxItem>
            <ComboBoxItem>Педиатр</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Пароль:" HorizontalAlignment="Right"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="5" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Повторите:" HorizontalAlignment="Right"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="6" Grid.Column="1" Height="25" Width="180" Margin="5,0"/>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" 
                    Click="RegisterButton_Click" 
                    Width="120" Height="30" Margin="10"/>
            <Button Content="Назад" 
                    Click="BackButton_Click" 
                    Width="80" Height="30" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>