<Page x:Class="pract7.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="white"
      Title="Прием">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Пациент:"/>
        <Label Grid.Row="0" Grid.Column="1" x:Name="PatientLabel" FontWeight="Bold"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Диагноз:"/>
        <TextBox x:Name="DiagnosisBox" Grid.Row="1" Grid.Column="1" Height="20" Width="200" Margin="5,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="История приемов:"/>

        <ListView x:Name="HistoryList" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" Width="100" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Диагноз" Width="150" DisplayMemberBinding="{Binding Diagnosis}"/>
                    <GridViewColumn Header="Врач" Width="80" DisplayMemberBinding="{Binding DoctorId}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Grid.Row="4" Grid.Column="0" Content="Рекомендации:"/>
        <TextBox x:Name="RecommendationsBox" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Width="400" Margin="5"/>

        <Button Grid.Row="6" Grid.Column="0" Content="Сохранить прием" Click="SaveAppointment_Click" Width="100" Height="25" Margin="5"/>
        <Button Grid.Row="6" Grid.Column="1" Content="Назад" Click="BackButton_Click" Width="80" Height="25" Margin="5"/>
    </Grid>
</Page>